{
  "manifest_version": 2,
  "name": "ReFigure",
  "version": "0.0.1",
  "description": "ReFigure extension",
  "icons": { "32": "/img/icon.png" },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "/img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://journals.plos.org/*"],
      "js": ["const.js", "content.js", "plos.js"]
    },
    {
      "matches": ["*://*/*"],
      "js": ["const.js", "content.js"]
    }
  ],
  "permissions": [
    "http://localhost:8181/api/*",
    "tabs"
  ]
}
